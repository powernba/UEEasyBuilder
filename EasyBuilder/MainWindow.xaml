<Window x:Class="EasyBuilder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EasyBuilder"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid HorizontalAlignment="Left" Height="49" Margin="10,66,0,0" VerticalAlignment="Top" Width="322">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250*"/>
                <ColumnDefinition Width="77*"/>

            </Grid.ColumnDefinitions>
            <Button x:Name="button" Content="..." Margin="10" Grid.Column="1"/>
            <TextBox x:Name="textBox" Margin="10" TextWrapping="Wrap" Text="TextBox"/>

        </Grid>
    </Grid>
</Window>
