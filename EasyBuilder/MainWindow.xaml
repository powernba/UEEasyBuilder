<Window x:Class="EasyBuilder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EasyBuilder"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid HorizontalAlignment="Left" Height="52" Margin="10,10,0,0" VerticalAlignment="Top" Width="239">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="25*"/>
                <ColumnDefinition Width="6*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="button" Content="Test" BorderBrush="{x:Null}" Foreground="{x:Null}" Margin="4,0,0,0" HorizontalAlignment="Left" Width="32" Grid.Column="1" >
                <Button.Background>
                    <ImageBrush ImageSource="Resources/Icons/Browse" Stretch="Uniform"/>
                </Button.Background>
            </Button>
            <TextBox x:Name="textBox" Margin="10,10,2,10" TextWrapping="Wrap" IsEnabled="False" BorderBrush="#FF76AADA"/>

        </Grid>
    </Grid>
</Window>
